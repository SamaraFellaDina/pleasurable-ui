<%- include('./partials/head') %>

<main>
  <article>
    <picture>
      <img
        src="<%-article.jetpack_featured_media_url%>"
        alt="artikel afbeelding"
        width="<%=article.yoast_head_json.og_image[0].width%>"
        height="<%=article.yoast_head_json.og_image[0].height%>"
      />
    </picture>

    <div class="article-date-header">
      <a href=""
        ><%=article.yoast_head_json.schema["@graph"][0].articleSection[0]%></a
      >

      <time>
        <%= new Date(article.date).getDate() %>/<%= new
        Date(article.date).getMonth() %>/<%= new
        Date(article.date).getFullYear() %>
      </time>
    </div>

    <h1><%-article.title.rendered%></h1>

    <form action="/article/<%=article.slug%>" method="post">
      <input type="hidden" name="slug" value="<%-article.slug%>" />
      <label for="copy-link"><%= article.copy %></label>
      <button type="submit" id="share">
        <?xml version="1.0" encoding="iso-8859-1"?>
        <svg
          fill="#000000"
          height="20px"
          width="20px"
          version="1.1"
          id="Layer_1"
          xmlns="http://www.w3.org/2000/svg"
          xmlns:xlink="http://www.w3.org/1999/xlink"
          viewBox="0 0 512 512"
          xml:space="preserve"
        >
          <g>
            <g>
              <path
                d="M512,241.7L273.643,3.343v156.152c-71.41,3.744-138.015,33.337-188.958,84.28C30.075,298.384,0,370.991,0,448.222v60.436
			l29.069-52.985c45.354-82.671,132.173-134.027,226.573-134.027c5.986,0,12.004,0.212,18.001,0.632v157.779L512,241.7z
			 M255.642,290.666c-84.543,0-163.661,36.792-217.939,98.885c26.634-114.177,129.256-199.483,251.429-199.483h15.489V78.131
			l163.568,163.568L304.621,405.267V294.531l-13.585-1.683C279.347,291.401,267.439,290.666,255.642,290.666z"
              />
            </g>
          </g>
        </svg>
        <%-share%>
      </button>
    </form>

    <section class="article-detail-author">
      <strong><%-article.excerpt.rendered%></strong>
      <h2>
        <span class="article-detail_author_type">Auteur:</span>
        <img src="images/fallback.png" />
        <%=article.yoast_head_json.author%>
      </h2>
      <!-- <img src="https://media.istockphoto.com/id/1300512215/photo/headshot-portrait-of-smiling-ethnic-businessman-in-office.jpg?s=612x612&w=0&k=20&c=QjebAlXBgee05B3rcLDAtOaMtmdLjtZ5Yg9IJoiy-VY="> -->

      <h2><span class="article-detail_author_type">Leestijd:</span> < 3 min</h2>
    </section>
    <div class="article-detail-content"><%-article.content.rendered%></div>
  </article>
</main>

<%- include('./partials/foot') %>
